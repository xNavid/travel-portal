

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h2 class="panel-title">Login</h3>
      </div>
      <div class="panel-body">
        
        <%= form_for(:session, :html => { class: "form-horizontal", role: "form" }, url: login_path) do |f| %>
          <div class="row">
            <div class="col-md-10 col-md-offset-1">
              <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, placeholder: "you@mail.com", class: "form-control", autofocus: true %>
              </div>
              <div class="form-group">
                <%= f.label :password %>
                <%= f.password_field :password, placeholder: "********", class: "form-control", autocomplete: "off" %>
              </div>
              <div class="form-group">
                <%= f.submit "Login", class: "btn btn-lg btn-primary btn-block" %>
              </div>
              <div class="form-group">
                <%= link_to "Create New Account" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
