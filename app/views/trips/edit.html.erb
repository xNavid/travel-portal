<h1>Edit trip details</h1>
<ul>
  
  <% if @trip.errors.any? %>
  <p>Following errors prevented the trip from getting created: </p>
  <% @trip.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
<% end %>
</ul>


<%= form_for @trip do |f| %>
  <p>
    <%= f.label :title %>
    <br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %>
    <br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :start_date %>
    <br>
    <%= f.date_field :start_date %>
  </p>
  <p>
    <%= f.label :end_date %>
    <br>
    <%= f.date_field :end_date %>
  </p>
  <p>
    <%= f.label :travel_mode %>
    <br>
    <%= f.text_field :travel_mode %>
  </p>
  <p>
    <%= f.label :ticket_cost %>
    <br>
    <%= f.number_field :ticket_cost %>
  </p>
  <p>
    <%= f.label :home_cab_cost %>
    <br>
    <%= f.number_field :home_cab_cost %>
  </p>
   <p>
    <%= f.label :destination_cab_cost %>
    <br>
    <%= f.number_field :destination_cab_cost %>
  </p>
   <p>
    <%= f.label :hotel_cost %>
    <br>
    <%= f.number_field :hotel_cost %>
  </p>
   <p>
    <%= f.label :local_transport %>
    <br>
    <%= f.text_field :local_transport %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>