<ul>
  <% if @trip.errors.any? %>
  <p>Following errors prevented the article from getting created: </p>
  <% @trip.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
<% end %>
</ul>


<%= form_for(@trip, :html => { class: "form-horizontal", role: "form" }) do |f| %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, placeholder: "title of the trip", class: "form-control", autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, placeholder: "trip description (minimum 10 characters)", class: "form-control", rows: 6 %>
      </div>
      <div class="form-group">
        <%= f.label :start_date %>
        <%= f.date_field :start_date, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :end_date %>
        <%= f.date_field :end_date, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :travel_mode %>
        <%= f.text_field :travel_mode, placeholder: "mode of travel (airplane, train, etc.)", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :ticket_cost %>
        <%= f.number_field :ticket_cost, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :home_cab_cost %>
        <%= f.number_field :home_cab_cost, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :destination_cab_cost %>
        <%= f.number_field :destination_cab_cost, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :hotel_cost %>
        <%= f.number_field :hotel_cost, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :local_transport %>
        <%= f.text_field :local_transport, placeholder: "mode of transportation in destination", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit class: "btn btn-lg btn-primary" %>
      </div>
    </div>
  </div>
  

   <p>
    
    <br>
    
  </p>
  <p>
    
  </p>
<% end %>